{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HQE Workbench",
  "version": "0.2.0",
  "identifier": "com.hqe.workbench",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "HQE Workbench",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": {
          "allow": [
            "$HOME/**"
          ]
        },
        "enable": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "12.0",
      "signingIdentity": null,
      "entitlements": null
    },
    "category": "DeveloperTool",
    "shortDescription": "HQE Engineer Protocol Workbench",
    "longDescription": "A local-first macOS desktop application for running the HQE Engineer Protocol - comprehensive codebase health auditing and technical leadership automation."
  }
}